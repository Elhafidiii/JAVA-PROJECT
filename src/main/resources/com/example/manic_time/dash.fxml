<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.manic_time.DashController">
   <children>
      <StackPane fx:id="mainStackPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f5f8fa;">
            <top>
               <VBox spacing="10" style="-fx-padding: 10;">
                  <!-- Titre -->
                  <HBox alignment="CENTER" prefHeight="65.0" spacing="10" style="-fx-background-color: #4a90e2; -fx-background-radius: 10; -fx-padding: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 8, 0, 0, 4);">
                     <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;" text="Dashboard" />
                  </HBox>

               </VBox>
            </top>
            <center>
               <VBox alignment="TOP_CENTER" spacing="30.0" style="-fx-padding: 20;">
                  <HBox spacing="20.0">
                  <!-- Section pour les tâches du jour -->
                  <TitledPane collapsible="false" expanded="true" prefHeight="244.0" prefWidth="592.0" text="Today's Tasks" textFill="#0078d7">
                        <font>
                           <Font name="System Bold" size="15.0" />
                        </font>
                        <content>
                           <TableView fx:id="daytasktable" prefHeight="209.0" prefWidth="325.0">
                              <columns>
                                 <TableColumn fx:id="titleColumn" prefWidth="115.33337148030569" text="Titre" />
                                 <TableColumn fx:id="descriptionColumn" minWidth="0.0" prefWidth="155.99994659423828" text="Description" />
                                 <TableColumn fx:id="statusColumn" minWidth="0.0" prefWidth="52.666666666666686" text="Status" />
                              </columns>
                              <columnResizePolicy>
                                 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                              </columnResizePolicy>
                           </TableView>
                        </content>
                  </TitledPane>
                  <!-- Section pour les applications et le temps total -->
                  <TitledPane collapsible="false" expanded="true" text="Application Usage" textFill="#0078d7">
                     <content>
                        <VBox spacing="10">
                           <TableView fx:id="applicationsTable" prefHeight="201.0" prefWidth="650.0">
                              <columns>
                                 <TableColumn fx:id="appColumn" prefWidth="193.33328247070312" text="Nom de l'application" />
                                 <TableColumn fx:id="timeColumn" prefWidth="192.66670735677081" text="Durée d'utilisation" />
                              </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                           </TableView>
                           <Label fx:id="totalTimeLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Temps total : 00:00:00" />
                        </VBox>
                     </content>
                        <font>
                           <Font name="System Bold Italic" size="15.0" />
                        </font>
                  </TitledPane>
                  </HBox>
                  <HBox>
                  <!-- Section pour les données hebdomadaires -->
                  <TitledPane alignment="CENTER" collapsible="false" expanded="true" text="Weekly Application Usage" textFill="#0078d7" translateX="50.0">
                     <content>
                        <BarChart fx:id="weeklyUsageChart" prefHeight="250.0" prefWidth="650.0">
                           <xAxis>
                              <CategoryAxis fx:id="dayAxis" label="Days of the Week" />
                           </xAxis>
                           <yAxis>
                              <NumberAxis fx:id="timeAxis" label="Usage (hours)" />
                           </yAxis>
                        </BarChart>
                     </content>
                        <font>
                           <Font name="System Bold" size="15.0" />
                        </font>
                  </TitledPane>
               </HBox>
               </VBox>
            </center>
         </BorderPane>
      </StackPane>
   </children>
</AnchorPane>
