<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.manic_time.DashController">
   <children>
      <StackPane fx:id="mainStackPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f5f8fa;">
            <top>
               <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #0078D7; -fx-padding: 10; -fx-border-color: #005A9E; -fx-border-width: 0 0 3 0;">
                  <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text=" Dashboard " />
               </HBox>
            </top>
            <center>
               <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">
                  <!-- Section pour les tâches du jour -->
                  <TitledPane collapsible="false" expanded="true" text="Today's Tasks">
                     <content>
                        <ListView fx:id="todayTasksListView" prefHeight="200" />
                     </content>
                  </TitledPane>
                  <!-- Section pour les applications et le temps total -->
                  <TitledPane collapsible="false" expanded="true" text="Application Usage">
                     <content>
                        <VBox spacing="10">
                           <HBox alignment="CENTER" spacing="10" />
                           <TableView fx:id="applicationsTable" prefHeight="201.0" prefWidth="739.0">
                              <columns>
                                 <TableColumn fx:id="appColumn" prefWidth="225.0" text="Nom de l'application" />
                                 <TableColumn fx:id="timeColumn" prefWidth="225.0" text="Durée d'utilisation" />
                              </columns>
                           </TableView>
                           <Label fx:id="totalTimeLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Temps total : 00:00:00" />
                        </VBox>
                     </content>
                  </TitledPane>
               </VBox>
            </center>
         </BorderPane>
      </StackPane>
   </children>
</AnchorPane>
