<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.manic_time.TacheController">
    <children>
        <StackPane fx:id="mainStackPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f5f8fa;">

                <center>
                    <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">

                        <!-- Section pour ajouter une nouvelle tâche -->
                        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #EAF6FF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.5, 0, 0);">
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #005A9E;" text="Add a New Task" />
                            <DatePicker fx:id="datePicker" promptText="Select a date" />
                            <TextField fx:id="tasktitleField" promptText="Enter title of task here" />
                            <TextField fx:id="taskdescriptionField" promptText="Enter description of task here" />
                            <Button onAction="#onAddTaskClick" style="-fx-background-color: #0078D7; -fx-text-fill: white;" text="Add Task" />
                        </VBox>

                        <!-- Boutons pour modifier, supprimer et marquer une tâche comme complétée -->
                        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
                            <Button onAction="#onModifyTaskClick" style="-fx-background-color: #FFA500; -fx-text-fill: white;" text="Modify" />
                            <Button onAction="#onDeleteTaskClick" style="-fx-background-color: #FF4C4C; -fx-text-fill: white;" text="Delete" />
                        </HBox>
                        <TableView fx:id="daytasktable" prefHeight="200.0" prefWidth="200.0">
                            <columns>
                                <TableColumn fx:id="titlecolomday" prefWidth="149.33334350585938" text="Titre" />
                                <TableColumn fx:id="descriptioncolomday" minWidth="0.0" prefWidth="508.6666259765625" text="Description" />
                                <TableColumn fx:id="statuscolomday" prefWidth="100.0" text="Status" />
                            </columns>
                        </TableView>
                        <TableView fx:id="othertasktable" prefHeight="200.0" prefWidth="200.0">
                            <columns>
                                <TableColumn fx:id="titlecolomother" prefWidth="150.66665077209473" text="Titre" />
                                <TableColumn fx:id="descriptioncolomother" minWidth="0.0" prefWidth="402.00001525878906" text="Description" />
                                <TableColumn fx:id="datecolomother" minWidth="0.0" prefWidth="151.3333740234375" text="Date" />
                                <TableColumn fx:id="statusCheckCol" minWidth="0.0" prefWidth="54.0" text="Status" />
                            </columns>
                        </TableView>

                    </VBox>
                </center>
            </BorderPane>
        </StackPane>
    </children>
</AnchorPane>
