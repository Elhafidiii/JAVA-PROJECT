<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.manic_time.tachesController">
    <children>
        <StackPane fx:id="mainStackPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f5f8fa;">

                <top>
                    <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #0078D7; -fx-padding: 10; -fx-border-color: #005A9E; -fx-border-width: 0 0 3 0;">
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Task Management System" />
                    </HBox>
                </top>

                <center>
                    <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">

                        <!-- Section pour ajouter une nouvelle tâche -->
                        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #EAF6FF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.5, 0, 0);">
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #005A9E;" text="Add a New Task" />
                            <DatePicker fx:id="datePicker" promptText="Select a date" />
                            <TextField fx:id="taskField" promptText="Enter task here" />
                            <Button onAction="#onAddTaskClick" style="-fx-background-color: #0078D7; -fx-text-fill: white;" text="Add Task" />
                        </VBox>

                        <!-- Boutons pour modifier, supprimer et marquer une tâche comme complétée -->
                        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
                            <Button  style="-fx-background-color: #FFA500; -fx-text-fill: white;" text="Modify" />
                            <Button onAction="#onDeleteTaskClick" style="-fx-background-color: #FF4C4C; -fx-text-fill: white;" text="Delete" />
                            <Button onAction="#onMarkAsCompleteClick" style="-fx-background-color: #28A745; -fx-text-fill: white;" text="Complete" />
                            <Button onAction="#onMarkAsIncompleteClick" style="-fx-background-color: #DC3545; -fx-text-fill: white;" text="Incomplete" />
                        </HBox>

                        <!-- Section pour les tâches du jour -->
                        <TitledPane collapsible="false" expanded="true" text="Today's Tasks">
                            <content>
                                <ListView fx:id="todayTasksListView" prefHeight="200" />
                            </content>
                        </TitledPane>

                        <!-- Section pour les autres tâches -->
                        <TitledPane collapsible="false" expanded="true" text="Other Tasks">
                            <content>
                                <ListView fx:id="otherTasksListView" prefHeight="200" />
                            </content>
                        </TitledPane>

                    </VBox>
                </center>
            </BorderPane>
        </StackPane>
    </children>
</AnchorPane>
