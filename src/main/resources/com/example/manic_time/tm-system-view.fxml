<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.manic_time.AppController">
    <BorderPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #f5f8fa;">
        <!-- Section supérieure avec le titre et les contrôles -->
        <top>
            <VBox>
                <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #0078D7; -fx-padding: 10; -fx-border-color: #005A9E; -fx-border-width: 0 0 3 0;">
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Smart Time" />
                </HBox>
                <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
                    <DatePicker fx:id="datePicker_TM" />
                    <Button mnemonicParsing="false" onAction="#handleShowApplications" text="Afficher" prefHeight="42.0" prefWidth="118.0" />
                </HBox>
            </VBox>
        </top>
        <!-- Section centrale pour la TableView -->
        <center>
            <TableView fx:id="applicationsTable" prefHeight="400.0">
                <columns>
                    <TableColumn fx:id="appColumn" prefWidth="225.0" text="Nom de l'application" />
                    <TableColumn fx:id="timeColumn" prefWidth="225.0" text="Durée d'utilisation" />
                </columns>
            </TableView>
        </center>
        <!-- Section inférieure pour afficher le temps total -->
        <bottom>
            <HBox alignment="CENTER" style="-fx-padding: 10;">
                <Label fx:id="totalTimeLabel" text="Temps total : 00:00:00" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>
