<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.manic_time.AppController">
    <BorderPane prefHeight="500.0" prefWidth="600.0">

        <!-- Section supérieure avec le titre et les contrôles -->
        <top>
            <VBox spacing="10" style="-fx-padding: 10;">
                <!-- Titre -->
                <HBox alignment="CENTER" prefHeight="65.0" spacing="10" style="-fx-background-color: #4a90e2; -fx-background-radius: 10; -fx-padding: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 8, 0, 0, 4);">
                    <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;" text="Smart Time" />
                </HBox>

                <!-- Recherche et sélection de la date -->
                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
                    <DatePicker fx:id="datePicker_TM" prefWidth="200.0" style="-fx-background-radius: 8;" />
                    <Button fx:id="showButton" onAction="#handleShowApplications" style="-fx-background-color: #38b000; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;" text="Afficher" />
                    <TextField fx:id="searchField" promptText="Rechercher une application..." style="-fx-border-color: #0096c7; -fx-border-radius: 8; -fx-padding: 8; -fx-background-radius: 8;" />
                </HBox>
            </VBox>
        </top>

        <!-- Tableau des applications -->
        <center>
            <TableView fx:id="applicationsTable" prefHeight="350.0" style="-fx-border-color: transparent; -fx-border-radius: 8; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 8, 0, 0, 4);">
                <columns>
                    <TableColumn fx:id="appColumn" prefWidth="275.0" style="-fx-alignment: CENTER-LEFT;" text="Nom de l'application" />
                    <TableColumn fx:id="timeColumn" prefWidth="275.0" style="-fx-alignment: CENTER-LEFT;" text="Durée d'utilisation" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <BorderPane.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" />
                </BorderPane.margin>
            </TableView>
        </center>

        <!-- Temps total -->
        <bottom>
            <HBox alignment="CENTER" style="-fx-padding: 15;">
                <Label fx:id="totalTimeLabel" prefHeight="50.0" prefWidth="300.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #4a90e2; -fx-background-radius: 10; -fx-text-fill: white; -fx-padding: 10; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 8, 0, 0, 4);" text="Temps total : 00:00:00" />
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>
