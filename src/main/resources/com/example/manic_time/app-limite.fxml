<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.manic_time.AppLimiteControler"
           prefHeight="400.0" prefWidth="600.0">
    <BorderPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #f5f8fa;">
        <!-- Top Section with Title -->
        <top>
            <VBox spacing="10" style="-fx-padding: 10;">
                <!-- Titre -->
                <HBox alignment="CENTER" prefHeight="65.0" spacing="10" style="-fx-background-color: #4a90e2; -fx-background-radius: 10; -fx-padding: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 8, 0, 0, 4);">
                    <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;" text="App Time Limits" />
                </HBox>

            </VBox>
        </top>

        <!-- Center Section with TableView -->
        <center>
            <VBox spacing="10" style="-fx-padding: 10;">
                <TableView fx:id="timeLimitsTable" prefHeight="300.0">
                    <columns>
                        <TableColumn fx:id="appNameColumn" prefWidth="200.0" text="Application Name" />
                        <TableColumn fx:id="timeLimitColumn" prefWidth="200.0" text="Time Limit (hh:mm)" />
                        <TableColumn fx:id="remainingTimeColumn" prefWidth="200.0" text="Remaining Time" />
                    </columns>
                </TableView>
            </VBox>
        </center>

        <!-- Bottom Section for Managing Time Limits -->
        <bottom>
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox spacing="10" alignment="CENTER">
                    <Label text="Application:" />
                    <ComboBox fx:id="appComboBox" promptText="Select Application" />

                    <Label text="Time Limit (hh:mm):" />
                    <TextField fx:id="hoursField" promptText="HH" prefWidth="50" />
                    <Label text=":" />
                    <TextField fx:id="minutesField" promptText="MM" prefWidth="50" />

                    <Button fx:id="addLimitButton" text="Add Limit" onAction="#handleAddLimit" />
                </HBox>
                <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
                    <Button fx:id="saveButton" text="Save Changes" onAction="#handleSaveChanges" style="-fx-background-color: #0078D7; -fx-text-fill: white;" />
                    <Button fx:id="cancelTimerButton" text="Cancel Timer" onAction="#handleCancelTimer" style="-fx-background-color: #d9534f; -fx-text-fill: white;" />
                </HBox>
            </VBox>
        </bottom>
    </BorderPane>
</StackPane>
