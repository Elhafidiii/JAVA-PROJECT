<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="512.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.manic_time.FocusSessionController">
    <children>
        <StackPane prefHeight="200.0" prefWidth="857.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <BorderPane fx:id="sessionPane" prefHeight="200.0" prefWidth="200.0">
                <center>
                    <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                  <Label scaleX="4.0" scaleY="4.0" text="Focus Session" translateY="-100.0" />

                        <VBox alignment="CENTER" spacing="10">
                            <!-- First Row -->
                            <HBox alignment="CENTER" spacing="20">
                                <Label text="Total Session Duration (minutes):" translateX="-20.0" />
                                <Spinner fx:id="totalFocusTimeSpinner" editable="true" prefWidth="200" translateX="-20.0" />
                            </HBox>

                            <!-- Second Row -->
                            <HBox alignment="CENTER" spacing="20">
                                <Label text="Focus Duration (minutes):" />
                                <Spinner fx:id="focusTimeSpinner" editable="true" prefWidth="200" />
                            </HBox>

                            <!-- Third Row -->
                            <HBox alignment="CENTER" spacing="20">
                                <Label text="Break Duration (minutes):" />
                                <Spinner fx:id="breakTimeSpinner" editable="true" prefWidth="200" />
                            </HBox>
                        </VBox>



                        <!-- Start Session Button -->
                        <!--                        <Button text="Start Focus Session" onAction="#startFocusSession" style="-fx-background-color: #0A4957; -fx-text-fill: white;" />-->

                        <!-- Timer Display -->
                        <Label fx:id="timerLabel" style="-fx-font-size: 24px;" text="00:00" translateY="20.0" />

                        <HBox alignment="CENTER" spacing="10.0" translateY="40.0">
                            <Button onAction="#startFocusSession" style="-fx-background-color: transparent;">
                                <graphic>
                                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../../../icons/start-icon.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <Button onAction="#pauseFocusSession" style="-fx-background-color: transparent;">
                                <graphic>
                                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../../../icons/pause-icon.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <Button onAction="#resetFocusSession" style="-fx-background-color: transparent;">
                                <graphic>
                                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../../../icons/reset-icon.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                        </HBox>
                    </VBox>
                </center>
            </BorderPane>
        </StackPane>
    </children>
</AnchorPane>
